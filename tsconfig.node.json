{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "types": ["electron-vite/node"]
  },
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron-vite/node",
    "src/*.d.ts",
    "src/main/**/*.ts",
    "src/preload/**/*.ts"
  ]
}
